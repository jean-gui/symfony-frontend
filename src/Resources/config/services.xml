<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="strata.preview_mode.data_provider"></parameter>
    </parameters>

    <services>
        <service id="Strata\Data\Query\QueryManager" alias="strata.query_manager" />

        <service id="Strata\Frontend\Site" alias="strata.site" />

        <service id="Strata\SymfonyBundle\ResponseHelper\SymfonyResponseHelper" alias="strata.response_helper" />

        <service id="strata.twig" class="Strata\SymfonyBundle\Twig\TwigExtension">
            <tag>twig.extension</tag>
        </service>

        <service id="strata.event_listener.twig" class="Strata\SymfonyBundle\EventListener\TwigEventSubscriber">
            <argument id="Twig\Environment" type="service" />
            <argument id="strata.site" type="service" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="strata.event_listener.preview_mode" class="Strata\SymfonyBundle\EventListener\PreviewModeEventSubscriber">
            <argument></argument>
            <argument type="service" id="strata.query_manager" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="strata.event_listener.response_tags" class="Strata\SymfonyBundle\EventListener\ResponseHelperEventSubscriber">
            <argument id="strata.response_helper" type="service" />
            <tag name="kernel.event_subscriber" />
        </service>

    </services>

</container>
